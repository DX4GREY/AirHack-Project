<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Defining the shape as a rectangle -->
    <!-- Adding stroke (border) -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray"/>  <!-- Color of the border -->
    <solid
        android:color="@color/black"/>
    <!-- Optional: Adding corner radius -->
    <corners android:radius="6dp" />  <!-- Rounded corners -->
</shape>
